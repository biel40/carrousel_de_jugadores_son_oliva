// Importamos los videos de las subcarpetas dentro de assets/videos
const videoModules = import.meta.glob<{ default: string }>(
  "../assets/videos/**/*.mp4",
  { eager: true },
);

// Extraer información de cada video incluyendo su categoría
interface VideoInfo {
  src: string;
  category: string;
  categoryOrder: number;
  fileName: string;
}

const videos: VideoInfo[] = Object.entries(videoModules).map(
  ([path, module]) => {
    // Extraer el nombre de la carpeta (categoría) del path
    // Path ejemplo: ../assets/videos/1. Alevin A/05 Maria Martin.mp4
    const parts = path.split("/");
    const fileName = parts[parts.length - 1].replace(".mp4", "");
    const categoryFolder = parts[parts.length - 2];

    // Extraer el número de orden de la categoría (ej: "1. Alevin A" -> 1)
    const orderMatch = categoryFolder.match(/^(\d+)\./);
    const categoryOrder = orderMatch ? parseInt(orderMatch[1]) : 999;

    // Extraer el nombre limpio de la categoría (sin el número)
    const categoryName = categoryFolder.replace(/^\d+\.\s*/, "");

    return {
      src: module.default,
      category: categoryName,
      categoryOrder,
      fileName,
    };
  },
);

// Ordenar videos: primero por categoría (según número), luego por nombre de archivo
videos.sort((a, b) => {
  if (a.categoryOrder !== b.categoryOrder) {
    return a.categoryOrder - b.categoryOrder;
  }
  return a.fileName.localeCompare(b.fileName);
});

// Obtener lista única de categorías ordenadas
const categories = [...new Set(videos.map((v) => v.category))];
