---
// Importamos los videos de la carpeta assets/videos
const videoModules = import.meta.glob<{ default: string }>('../assets/videos/*.mp4', { eager: true });
const videos = Object.values(videoModules);
---

<div class="carousel-container">
  <div class="video-wrapper">
    {videos.map((video, index) => (
      <video 
        class={`carousel-video ${index === 0 ? 'active' : ''}`}
        data-index={index}
        muted
        loop
        playsinline
        autoplay
      >
        <source src={video.default} type="video/mp4" />
        Tu navegador no soporta videos HTML5.
      </video>
    ))}
  </div>

  <!-- Controles del carrusel - flechas de navegación -->
  <div class="carousel-controls">
    <button class="carousel-btn prev" aria-label="Video anterior">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
    
    {videos.length > 1 && (
      <div class="carousel-dots">
        {videos.map((_, index) => (
          <button 
            class={`dot ${index === 0 ? 'active' : ''}`}
            data-index={index}
            aria-label={`Ir al video ${index + 1}`}
          ></button>
        ))}
      </div>
    )}
    
    <button class="carousel-btn next" aria-label="Siguiente video">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </div>

  <!-- Botón de play/pause -->
  <button class="play-pause-btn" aria-label="Pausar/Reproducir video">
    <svg class="pause-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect x="6" y="4" width="4" height="16"></rect>
      <rect x="14" y="4" width="4" height="16"></rect>
    </svg>
    <svg class="play-icon hidden" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polygon points="5 3 19 12 5 21 5 3"></polygon>
    </svg>
  </button>

  <!-- Botón de mute/unmute -->
  <button class="mute-btn" aria-label="Activar/Desactivar sonido">
    <svg class="muted-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
      <line x1="23" y1="9" x2="17" y2="15"></line>
      <line x1="17" y1="9" x2="23" y2="15"></line>
    </svg>
    <svg class="unmuted-icon hidden" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
      <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"></path>
    </svg>
  </button>
</div>

<style>
  .carousel-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height - mejor para móviles */
    overflow: hidden;
    background: #000;
  }

  .video-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .carousel-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    pointer-events: none;
  }

  .carousel-video.active {
    opacity: 1;
    pointer-events: auto;
  }

  /* Controles del carrusel */
  .carousel-controls {
    position: absolute;
    bottom: 40px;
    bottom: calc(40px + env(safe-area-inset-bottom, 0px));
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 20px;
    z-index: 10;
    transition: opacity 0.3s ease;
  }

  .carousel-btn {
    background: rgba(0, 0, 0, 0.3);
    border: none;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    min-width: 44px; /* Tamaño mínimo táctil recomendado */
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .carousel-btn svg {
    filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5));
    width: 24px;
    height: 24px;
  }

  .carousel-btn:hover,
  .carousel-btn:active {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    transform: scale(1.1);
  }

  .carousel-dots {
    display: flex;
    gap: 12px;
    padding: 8px 12px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 20px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .dot.active {
    background: white;
    transform: scale(1.3);
    box-shadow: 0 0 6px rgba(255,255,255,0.5);
  }

  .dot:hover,
  .dot:active {
    background: rgba(255, 255, 255, 0.9);
  }

  /* Botón de play/pause */
  .play-pause-btn {
    position: absolute;
    bottom: 40px;
    bottom: calc(40px + env(safe-area-inset-bottom, 0px));
    left: 40px;
    left: calc(40px + env(safe-area-inset-left, 0px));
    background: rgba(0, 0, 0, 0.3);
    border: none;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    min-width: 44px;
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    z-index: 10;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .play-pause-btn svg {
    filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5));
    width: 24px;
    height: 24px;
  }

  .play-pause-btn:hover,
  .play-pause-btn:active {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    transform: scale(1.1);
  }

  /* Botón de mute */
  .mute-btn {
    position: absolute;
    bottom: 40px;
    bottom: calc(40px + env(safe-area-inset-bottom, 0px));
    right: 40px;
    right: calc(40px + env(safe-area-inset-right, 0px));
    background: rgba(0, 0, 0, 0.3);
    border: none;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    min-width: 44px;
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    z-index: 10;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .mute-btn svg {
    filter: drop-shadow(0 1px 2px rgba(0,0,0,0.5));
    width: 24px;
    height: 24px;
  }

  .mute-btn:hover,
  .mute-btn:active {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    transform: scale(1.1);
  }

  .hidden {
    display: none;
  }

  /* Tablets y pantallas medianas */
  @media (max-width: 1024px) {
    .carousel-controls {
      bottom: calc(30px + env(safe-area-inset-bottom, 0px));
      gap: 16px;
    }

    .play-pause-btn {
      bottom: calc(30px + env(safe-area-inset-bottom, 0px));
      left: calc(30px + env(safe-area-inset-left, 0px));
    }

    .mute-btn {
      bottom: calc(30px + env(safe-area-inset-bottom, 0px));
      right: calc(30px + env(safe-area-inset-right, 0px));
    }
  }

  /* Móviles en portrait */
  @media (max-width: 768px) {
    .carousel-controls {
      bottom: calc(100px + env(safe-area-inset-bottom, 0px));
      gap: 12px;
      width: auto;
      max-width: 80%;
    }

    .carousel-btn {
      width: 48px;
      height: 48px;
      background: rgba(0, 0, 0, 0.4);
    }

    .carousel-btn svg {
      width: 22px;
      height: 22px;
    }

    .carousel-dots {
      gap: 10px;
      padding: 10px 14px;
    }

    .dot {
      width: 12px;
      height: 12px;
    }

    .play-pause-btn,
    .mute-btn {
      width: 52px;
      height: 52px;
      bottom: calc(24px + env(safe-area-inset-bottom, 0px));
      background: rgba(0, 0, 0, 0.4);
    }

    .play-pause-btn {
      left: calc(16px + env(safe-area-inset-left, 0px));
    }

    .mute-btn {
      right: calc(16px + env(safe-area-inset-right, 0px));
    }

    .play-pause-btn svg,
    .mute-btn svg {
      width: 26px;
      height: 26px;
    }
  }

  /* Móviles pequeños */
  @media (max-width: 480px) {
    .carousel-controls {
      bottom: calc(90px + env(safe-area-inset-bottom, 0px));
      gap: 8px;
      max-width: 90%;
    }

    .carousel-btn {
      width: 44px;
      height: 44px;
    }

    .carousel-btn svg {
      width: 20px;
      height: 20px;
    }

    .carousel-dots {
      gap: 8px;
      padding: 8px 10px;
    }

    .dot {
      width: 10px;
      height: 10px;
    }

    .play-pause-btn,
    .mute-btn {
      width: 48px;
      height: 48px;
      bottom: calc(20px + env(safe-area-inset-bottom, 0px));
    }

    .play-pause-btn {
      left: calc(12px + env(safe-area-inset-left, 0px));
    }

    .mute-btn {
      right: calc(12px + env(safe-area-inset-right, 0px));
    }

    .play-pause-btn svg,
    .mute-btn svg {
      width: 24px;
      height: 24px;
    }
  }

  /* Móviles en landscape */
  @media (max-height: 500px) and (orientation: landscape) {
    .carousel-controls {
      bottom: calc(16px + env(safe-area-inset-bottom, 0px));
      gap: 10px;
    }

    .carousel-btn {
      width: 40px;
      height: 40px;
    }

    .carousel-btn svg {
      width: 18px;
      height: 18px;
    }

    .carousel-dots {
      gap: 6px;
      padding: 6px 10px;
    }

    .dot {
      width: 8px;
      height: 8px;
    }

    .play-pause-btn,
    .mute-btn {
      width: 44px;
      height: 44px;
      bottom: calc(16px + env(safe-area-inset-bottom, 0px));
    }

    .play-pause-btn {
      left: calc(16px + env(safe-area-inset-left, 0px));
    }

    .mute-btn {
      right: calc(16px + env(safe-area-inset-right, 0px));
    }

    .play-pause-btn svg,
    .mute-btn svg {
      width: 20px;
      height: 20px;
    }
  }

  /* Pantallas muy altas (como Pixel 10 Pro XL) */
  @media (min-height: 800px) and (max-width: 500px) {
    .carousel-controls {
      bottom: calc(120px + env(safe-area-inset-bottom, 0px));
    }

    .play-pause-btn,
    .mute-btn {
      bottom: calc(40px + env(safe-area-inset-bottom, 0px));
    }
  }

  /* Soporte para dispositivos con notch */
  @supports (padding: max(0px)) {
    .carousel-controls {
      bottom: max(40px, calc(40px + env(safe-area-inset-bottom, 0px)));
    }

    .play-pause-btn {
      bottom: max(40px, calc(40px + env(safe-area-inset-bottom, 0px)));
      left: max(40px, calc(40px + env(safe-area-inset-left, 0px)));
    }

    .mute-btn {
      bottom: max(40px, calc(40px + env(safe-area-inset-bottom, 0px)));
      right: max(40px, calc(40px + env(safe-area-inset-right, 0px)));
    }

    @media (max-width: 768px) {
      .carousel-controls {
        bottom: max(100px, calc(100px + env(safe-area-inset-bottom, 0px)));
      }

      .play-pause-btn,
      .mute-btn {
        bottom: max(24px, calc(24px + env(safe-area-inset-bottom, 0px)));
      }

      .play-pause-btn {
        left: max(16px, calc(16px + env(safe-area-inset-left, 0px)));
      }

      .mute-btn {
        right: max(16px, calc(16px + env(safe-area-inset-right, 0px)));
      }
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const videos = document.querySelectorAll<HTMLVideoElement>('.carousel-video');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.querySelector('.prev');
    const nextBtn = document.querySelector('.next');
    const playPauseBtn = document.querySelector('.play-pause-btn');
    const muteBtn = document.querySelector('.mute-btn');
    const pauseIcon = document.querySelector('.pause-icon');
    const playIcon = document.querySelector('.play-icon');
    const mutedIcon = document.querySelector('.muted-icon');
    const unmutedIcon = document.querySelector('.unmuted-icon');
    
    let currentIndex = 0;
    let isPlaying = true;
    let isMuted = true;

    function showVideo(index: number) {
      // Pausar el video actual
      videos[currentIndex]?.pause();
      videos[currentIndex]?.classList.remove('active');
      dots[currentIndex]?.classList.remove('active');

      // Actualizar índice
      currentIndex = index;
      if (currentIndex >= videos.length) currentIndex = 0;
      if (currentIndex < 0) currentIndex = videos.length - 1;

      // Mostrar y reproducir el nuevo video
      videos[currentIndex]?.classList.add('active');
      dots[currentIndex]?.classList.add('active');
      
      if (isPlaying) {
        videos[currentIndex]?.play();
      }
    }

    function togglePlayPause() {
      isPlaying = !isPlaying;
      
      if (isPlaying) {
        videos[currentIndex]?.play();
        pauseIcon?.classList.remove('hidden');
        playIcon?.classList.add('hidden');
      } else {
        videos[currentIndex]?.pause();
        pauseIcon?.classList.add('hidden');
        playIcon?.classList.remove('hidden');
      }
    }

    function toggleMute() {
      isMuted = !isMuted;
      
      videos.forEach(video => {
        video.muted = isMuted;
      });

      if (isMuted) {
        mutedIcon?.classList.remove('hidden');
        unmutedIcon?.classList.add('hidden');
      } else {
        mutedIcon?.classList.add('hidden');
        unmutedIcon?.classList.remove('hidden');
      }
    }

    // Event listeners
    prevBtn?.addEventListener('click', () => showVideo(currentIndex - 1));
    nextBtn?.addEventListener('click', () => showVideo(currentIndex + 1));
    playPauseBtn?.addEventListener('click', togglePlayPause);
    muteBtn?.addEventListener('click', toggleMute);

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => showVideo(index));
    });

    // Reproducir el primer video automáticamente
    if (videos[0]) {
      videos[0].play().catch(() => {
        // Autoplay bloqueado por el navegador
        console.log('Autoplay bloqueado, el usuario debe interactuar primero');
      });
    }

    // Navegación con teclado
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') showVideo(currentIndex - 1);
      if (e.key === 'ArrowRight') showVideo(currentIndex + 1);
      if (e.key === ' ') {
        e.preventDefault();
        togglePlayPause();
      }
      if (e.key === 'm' || e.key === 'M') toggleMute();
    });
  });
</script>
